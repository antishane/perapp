<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <LinearLayout 
        android:layout_width="match_parent" 
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        >

        <TextView
		android:id="@+id/boost_value"
        android:layout_width="30sp"
        android:layout_marginLeft="5sp"
        android:textSize="20sp"
        android:layout_height="wrap_content"
        android:text=""/>
<SeekBar
    android:id="@+id/boost"
    android:layout_width="0dip"
    android:layout_weight="1"
    android:layout_height="wrap_content"
    android:layout_marginLeft="20dip"
    android:layout_marginRight="20dip"
    android:layout_marginTop="10dip"
    android:layout_marginBottom="10dip"
    android:max="15"
    />
</LinearLayout>

    <TextView
        android:id="@+id/warn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10sp"
        android:paddingBottom="10sp"
        android:text="Warning: Playing audio at high volumes may damage speakers/hearing.  ALL USE IS AT YOUR OWN RISK.  Particularly beware of boosts above 40%, especially with music." />
    
    <LinearLayout 
        android:layout_width="match_parent" 
        android:layout_height="wrap_content">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="On app start: "/>
    <Spinner
        android:id="@+id/mode_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    </LinearLayout>
    
</LinearLayout>